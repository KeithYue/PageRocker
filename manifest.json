{
  "manifest_version": 2,

  "name": "Page Rocker",
  "description": "A chrome extension which can track user's head to control the display of the webpage the user visiting ",
  "version": "2.0",
  "background": {
      "scripts": ["js/background.js"]
      },
  "browser_action": {
    "default_icon": "rock.png",
    "default_title": "Page Rocker",
    "default_popup": "popup.html"
  },
  "content_scripts":[
  {
      "matches": ["http://*/*", "https://*/*"],
      "css":["css/jquery-ui.css"],
      "js": [
        "js/Three58.js",
        "js/PointerLockControls.js",
        "js/OrbitControls.js",
        "js/Detector.js",
        "js/Stats.js",
        "js/TrackballControls.js",
        "js/OrbitControls.js",
        "js/THREEx.KeyboardState.js",
        "js/THREEx.FullScreen.js",
        "js/THREEx.WindowResize.js",
        "js/CSS3DRenderer.js",
        "js/jquery.min.js",
        "js/jquery-ui.js",
        "js/bootstrap.js",
        "js/jquery.transit.min.js",
        "js/headtrackr.js",
        "js/soundmanager2-jsmin.js"
      ]
      }
  ],
  "web_accessible_resources": [
    "images/animated-overlay.gif",
    "images/ui-bg_flat_0_aaaaaa_40x100.png",
    "images/ui-bg_flat_75_ffffff_40x100.png",
    "images/ui-bg_glass_55_fbf9ee_1x400.png",
    "images/ui-bg_glass_65_ffffff_1x400.png",
    "images/ui-bg_glass_75_dadada_1x400.png",
    "images/ui-bg_glass_75_e6e6e6_1x400.png",
    "images/ui-bg_glass_95_fef1ec_1x400.png",
    "images/ui-bg_highlight-soft_75_cccccc_1x100.png",
    "images/ui-icons_222222_256x240.png",
    "images/ui-icons_2e83ff_256x240.png",
    "images/ui-icons_454545_256x240.png",
    "images/ui-icons_888888_256x240.png",
    "images/ui-icons_cd0a0a_256x240.png",
    "images/sky_grass.png",
    "images/sea.jpg",
    "images/sky.jpg",
    "images/checkerboard.jpg",
    "html_samples/popup.html",
    "songs/creazy_kids.m4a",
    "songs/moves_like_jagger.mp3",
    "songs/What_Makes_You_Beautiful.mp3",
    // textures
    "textures/grasslight-big.jpg"
  ],
  "permissions": [
    "tabs",
    "http://*/*",
    "fileSystem"
  ]
}
